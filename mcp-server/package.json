{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "A secure proxy server for Google Maps API, inspired by cablate/mcp-google-map.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts",
    "start": "node dist/cli.js",
    "dev": "npm run build -- --watch"
  },
  "keywords": [
    "mcp",
    "google-maps",
    "llm",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/yargs": "^17.0.32",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
